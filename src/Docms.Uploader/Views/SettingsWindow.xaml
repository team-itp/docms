<Window x:Class="Docms.Uploader.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Docms.Uploader.Views"
        xmlns:vm="clr-namespace:Docms.Uploader.ApplicationSettings"
        mc:Ignorable="d"
        Title="設定" Height="450" Width="800">
    <d:Window.DataContext>
        <vm:SettingsViewModel />
    </d:Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:WatchDirecotrySettingsViewModel}">
            <local:WatchDirectorySettingsView/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="キャンセル" Command="{Binding CancelCommand}" />
            <Button Content="完了" Command="{Binding ConfirmCommand}" />
        </StackPanel>
        <Grid>
            <ContentControl Content="{Binding ViewModel}" />
        </Grid>
    </DockPanel>
</Window>
