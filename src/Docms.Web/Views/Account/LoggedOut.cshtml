@model Docms.Web.IdentityServer.LoggedOutViewModel

@{
    ViewData["Title"] = "ログアウト";
    ViewData["signed-out"] = true;
}

<div class="page-header logged-out">
    <h1>
        ログアウト
        <small>ログアウトしました</small>
    </h1>
    @if (Model.PostLogoutRedirectUri != null)
    {
        <div>
            <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">ここ</a>をクリックして
            <span>@Model.ClientName</span>に戻ります。
        </div>
    }
    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
    }
</div>
@section scripts
    {
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script>
            window.addEventListener("load", function () {
                var a = document.querySelector("a.PostLogoutRedirectUri");
                if (a) {
                    window.location = a.href;
                }
            });

        </script>
    }
}
