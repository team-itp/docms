@model Docms.Web.IdentityServer.LoginViewModel

@{
    ViewData["Title"] = "ホームページ";
}

<div class="login-page">
    <div class="page-header">
        <h1>ログイン</h1>
    </div>
    @Html.Partial("_ValidationSummary")
    <div class="row">
        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">ログイン</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username">ユーザー名</label>
                                    <input class="form-control" placeholder="ユーザー名" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">パスワード</label>
                                    <input type="password" class="form-control" placeholder="パスワード" asp-for="Password" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="RememberLogin">
                                            <input asp-for="RememberLogin">
                                            <strong>ログイン状態を保存する</strong>
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="login">ログイン</button>
                                    <button class="btn btn-default" name="button" value="cancel">キャンセル</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>