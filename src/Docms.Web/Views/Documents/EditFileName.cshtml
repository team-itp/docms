@model EditFileNameViewModel

@{
    ViewData["Title"] = Model.FileName + " ファイル名の編集";
}

<h2>@Model.FileName</h2>

<h4>ファイル名を編集する</h4>
<div class="row">
    <div class="col-md-6">
        <hr />
        <form asp-action="EditFileName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-for="FileName" readonly class="form-control-plaintext" />
            </div>
            <div class="form-group">
                <label asp-for="EditedFileName" class="control-label"></label>
                <input asp-for="EditedFileName" class="form-control" />
                <span asp-validation-for="EditedFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存する" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">詳細に戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
