@model DocumentsByTagViewModel

@{
    ViewData["Title"] = Model.Tag.Name + " の文書一覧";
}

<div class="d-flex justify-content-between align-items-end">
    <h2>@Model.Tag.Name の文書一覧</h2>
    @if (Model.Tag.IsFaved) {
        <form asp-action="DeleteFavorites" asp-controller="Profile" asp-route-favId="@Model.Tag.FavId">
            <input type="hidden" name="ReturnUrl" value="@Url.Action("IndexByTag", new { tagId = Model.Tag.Id })" />
            <button class="btn btn-fav btn-outline-success" type="submit">
                <i class="fas fa-star"></i>
                <span class="sr-only">お気に入りから削除</span>
            </button>
        </form>
    } else {
        <form asp-action="AddFavorites" asp-controller="Profile">
            <input type="hidden" name="Type" value="@Constants.FAV_TYPE_TAG" />
            <input type="hidden" name="DataId" value="@Model.Tag.Id" />
            <input type="hidden" name="ReturnUrl" value="@Url.Action("IndexByTag", new { tagId = Model.Tag.Id })" />
            <button class="btn btn-fav btn-outline-success" type="submit">
                <i class="fa fa-star"></i>
                <span class="sr-only">お気に入りに追加</span>
            </button>
        </form>
    }
</div>
<hr />

@if (!Model.Documents.Any())
{
    <p>検索結果は見つかりませんでした。</p>
}
else
{
    <div class="row search-result">
        @foreach (var document in Model.Documents)
        {
            <div class="col-md-auto">
                <div class="card box-shadow my-2">
                    <a href="@(document.Links.Self)">
                        <img class="card-img-top" alt="@document.FileName" src="@document.Links.SmallThumb" data-holder-rendered="true">
                    </a>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="card-text">@document.FileName</p>
                            <div class="btn-group">
                                <a href="@(document.Links.Self)" class="btn btn-sm btn-outline-secondary">
                                    <i class="fa fa-info-circle"></i>
                                    詳細
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}