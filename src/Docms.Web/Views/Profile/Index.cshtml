@model ProfileViewModel

@{
    ViewData["Title"] = @Model.Name + " さんの詳細";
}
@{
    var tags = (ViewData["ProjectTags"] as IEnumerable<Docms.Web.Data.Tag>)
        .Select(e => new SelectListItem() { Value = e.Id.ToString(), Text = e.Name });
}


<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <hr />
        <dl class="dl-horizontal mt-3 mb-5">
            <dt>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AccountName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AccountName)
            </dd>
        </dl>

        <h4>お気に入りの案件一覧</h4>
        <form asp-action="AddPreferredTag">
            <div class="input-group mb-3">
                <select class="custom-select" name="tagId" asp-items="@tags"></select>
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">お気に入り追加</button>
                </div>
            </div>
        </form>
        <ul class="list-group">
            @foreach (var item in Model.PreferredTags)
            {
                <li class="list-group-item d-flex justify-content-between">
                    @item.Name
                    <form asp-action="DeletePreferredTag" asp-route-tagId="@item.Id">
                        <button class="btn btn-sm btn-outline-dark py-1">
                            <i class="fa fa-trash"></i>
                        </button>
                    </form>
                </li>
            }
        </ul>
    </div>
</div>
