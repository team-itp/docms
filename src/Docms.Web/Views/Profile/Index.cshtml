@model ProfileViewModel

@{
    ViewData["Title"] = @Model.Name + " さんの詳細";
}
@{
    var tags = (ViewData["ProjectTags"] as IEnumerable<Docms.Web.Data.Tag>)
        .Select(e => new SelectListItem() { Value = e.Id.ToString(), Text = e.Name });
}


<h2>@Model.Name <small>@@@Model.AccountName</small></h2>

<div class="row">
    <div class="col-md-6">
        <hr />
        <div class=" mt-3 mb-5">
            <div class="form-group row">
                <div class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.DepartmentName, new { @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TeamName)
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.TeamName, new { @class = "form-control-plaintext" })
                </div>
            </div>
        </div>

        <h4>お気に入りの案件一覧</h4>
        <form asp-action="AddFavorites">
            <div class="input-group mb-3">
                <input type="hidden" name="Type" value="@Constants.FAV_TYPE_TAG" />
                <select class="custom-select" name="DataId" asp-items="@tags"></select>
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">お気に入り追加</button>
                </div>
            </div>
        </form>
        <ul class="list-group">
            @foreach (var item in Model.Favorites)
            {
                <li class="list-group-item d-flex justify-content-between">
                    @item.Name
                    <form asp-action="DeleteFavorites" asp-route-favId="@item.Id">
                        <button class="btn btn-sm btn-outline-dark py-1">
                            <i class="fa fa-trash"></i>
                        </button>
                    </form>
                </li>
            }
        </ul>
    </div>
</div>
