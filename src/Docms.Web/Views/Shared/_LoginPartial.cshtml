@using Microsoft.AspNetCore.Identity
@using Docms.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form class="form-inline" asp-area="" asp-controller="Search" asp-action="Index" method="get">
        <input name="q" class="form-control mr-sm-2" aria-label="検索" type="search" placeholder="検索">
    </form>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-controller="Documents" asp-action="Create" class="nav-link">
                <span class="oi oi-plus"></span><span class="d-sm-none pl-2">アップロード</span>
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Admin" asp-action="Index" class="nav-link">
                <span class="oi oi-cog"></span><span class="d-sm-none pl-2">設定</span>
            </a>
        </li>
        <li class="">
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </form>
        </li>
    </ul>
}
