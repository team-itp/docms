@model CreateTagMetaViewModel

@{
    ViewData["Title"] = Model.Name + " メタデータの追加";
}

<h2>@Model.Name</h2>
<h4>タグ @Model.Name にメタデータを追加します</h4>

<div class="row">
    <div class="col-md-6">
        <hr />
        <form asp-action="CreateMetadata">
            <input type="hidden" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MetaKey" class="control-label"></label>
                <input asp-for="MetaKey" class="form-control" />
                <span asp-validation-for="MetaKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaValue" class="control-label"></label>
                <input asp-for="MetaValue" class="form-control" />
                <span asp-validation-for="MetaValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">メタデータの追加</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">詳細に戻る</a>
</div>

