@model EditTagNameViewModel

@{
    ViewData["Title"] = Model.Name + " タグ名の編集";
}

<h2>@Model.Name</h2>

<h4>タグの名前を編集する</h4>
<div class="row">
    <div class="col-md-6">
        <hr />
        <form asp-action="EditName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" readonly class="form-control-plaintext" />
            </div>
            <div class="form-group">
                <label asp-for="EditedName" class="control-label"></label>
                <input asp-for="EditedName" class="form-control" />
                <span asp-validation-for="EditedName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">保存する</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
